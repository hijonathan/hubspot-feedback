@import 'nib'
@import 'constants'

.content-wrapper
    margin-top top-margin

.affix
    .affixed-wrapper
        .affixed-offset
            top -40px
            position absolute

.add-feedback
    width 100%
    box-sizing border-box

.pill-nav-list
    border-radius 6px
    background-color #fff
    box-shadow 0 1px 4px rgba(0, 0, 0, .065)
    padding 0
    width 180px

    >
        .active
            > a
                position relative
                z-index 2
                padding 9px 15px
                border 0
                text-shadow 0 1px 0 rgba(0, 0, 0, .15)
                background-color link-color
                color #fff

            .icon-chevron-right
                opacity 1

        li
            &:first-child > a
                border-radius 6px 6px 0 0
            &:last-child > a
                border-radius 0 0 6px 6px

            > a
                display block
                margin 0 0 -1px
                padding 8px 14px
                border 1px solid #E5E5E5

    .icon-chevron-right
        float right
        margin-top 2px
        margin-right -6px
        opacity .25


.blur
    width 470px
    height 40px
    background-color rgba(255, 255, 255, 0.8)
    box-shadow 0 10px 10px rgba(255, 255, 255, 0.8)

#detail #logout-screen
    right 0
