@import 'nib'
@import 'mixins'


#detail

    .feedback-text
        font-size 17px
        line-height 1.8
        font-family 'Georgia'
        padding 10px
        border 1px solid #eee
        border-radius 6px

    .affix
        width 470px

.comment
    background-color #f6f6f6

    &.by-you
        background-color #f0ffe5
        arrow 'top'

    display block
    position relative
    padding 7px 10px
    margin 1em 0 3em
    arrow 'top'

    .author
        font-size 11px
        text-align right
        margin 0
        color #aaa

        .comments-list &
            position absolute
            top -19px
            right 0

    p:last-child
        margin-bottom 0

    .comments-list &
        margin 20px 0 30px
        position relative
